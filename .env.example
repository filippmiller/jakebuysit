# === JakeBuysIt â€” Environment Variables ===
# Copy to .env and fill in values before running docker-compose

# === REQUIRED ===

# Database
POSTGRES_USER=jakebuysit
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=jakebuysit

# Auth (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_DIFFERENT_SECRET

# AI Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here

# === OPTIONAL (enable when ready) ===

# Marketplace APIs
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=
SERPAPI_KEY=

# Voice synthesis
ELEVENLABS_API_KEY=
JAKE_VOICE_ID=

# AWS S3 (photo + audio storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=jakebuysit-photos

# Payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Shipping
EASYPOST_API_KEY=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Telegram (admin escalation notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=

# Feature Flags
ENABLE_VOICE_GENERATION=true
ENABLE_TIER_3_DYNAMIC=true
