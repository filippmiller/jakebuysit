# Jake Voice & Character System - Environment Configuration

# Anthropic API (for script generation)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ElevenLabs API (for voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-key
JAKE_VOICE_ID=your-voice-model-id

# AWS S3 (for audio storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_VOICE_BUCKET=jake-voices
CDN_BASE_URL=https://cdn.jakebuysit.com

# PostgreSQL (for script library & analytics)
DATABASE_URL=postgresql://user:password@localhost:5432/jake_db

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3000
NODE_ENV=development

# Feature Flags
ENABLE_VOICE_GENERATION=true
ENABLE_TIER_3_DYNAMIC=true
VOICE_PLAYBACK_DEFAULT=true
