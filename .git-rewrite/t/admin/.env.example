# Backend API
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
BACKEND_API_URL=http://localhost:8080/api/v1

# Admin Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production
ADMIN_SESSION_TIMEOUT_MINUTES=30
REQUIRE_2FA=true

# Telegram Bot (for mobile escalations)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-admin-channel-id

# Real-time Updates
ENABLE_SSE=true
SSE_HEARTBEAT_INTERVAL=30000

# Database (if direct access needed, otherwise via backend API)
DATABASE_URL=postgresql://user:password@localhost:5432/jakebuysit

# Redis (for real-time features)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_WAREHOUSE_MODULE=true
ENABLE_ANALYTICS_MODULE=true

# Security
ALLOWED_ADMIN_IPS=127.0.0.1,10.0.0.0/8
SESSION_COOKIE_SECURE=true
CSRF_PROTECTION_ENABLED=true

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true
